# Environment
ENVIRONMENT=development
VERSION=1.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://ai_safety:ai_safety_password@localhost:5432/ai_safety_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Blockchain - Polygon Mumbai Testnet
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
CHAIN_ID=80001
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Smart Contract Addresses (filled after deployment)
CONTRACT_ADDRESS_LOGGER=
CONTRACT_ADDRESS_GOVERNANCE=
CONTRACT_ADDRESS_AEGIS=

# PolygonScan API (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# IPFS
IPFS_HOST=127.0.0.1
IPFS_PORT=5001

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Trusted Hosts (production only)
ALLOWED_HOSTS=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Monitoring
PROMETHEUS_PORT=9090

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@aisafety.ai

# External APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_IPFS=false
ENABLE_EMAIL=false

